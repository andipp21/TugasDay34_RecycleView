<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="8dp">

    <ImageView
        android:id="@+id/ivImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:elevation="4dp"
        android:outlineSpotShadowColor="#000"/>

    <TextView
        android:id="@+id/tvNamaAPP"
        app:layout_constraintTop_toBottomOf="@id/ivImg"
        app:layout_constraintStart_toStartOf="@id/ivImg"
        app:layout_constraintEnd_toEndOf="@id/ivImg"
        android:layout_marginTop="2dp"
        android:text="Nama APP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSizeAPP"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvNamaAPP"
        app:layout_constraintStart_toStartOf="@id/tvNamaAPP"
        android:text="20 MB"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>